<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TournamentAssistantUI.Views.LoadingDialog"
        Title="LoadingDialog"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        HasSystemDecorations="False"
        ShowInTaskbar="False">
  <Border BorderBrush="LawnGreen" BorderThickness="1">
    <Panel Width="350" Height="350" VerticalAlignment="Top">
      <ExperimentalAcrylicBorder IsHitTestVisible="False">
        <ExperimentalAcrylicBorder.Material>
          <ExperimentalAcrylicMaterial
              BackgroundSource="Digger"
              TintColor="Black"
              TintOpacity="1"
              MaterialOpacity="0.65" />
        </ExperimentalAcrylicBorder.Material>
      </ExperimentalAcrylicBorder>
      <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Text="{Binding LoadingText}"></TextBlock>
      <ProgressBar IsIndeterminate="{Binding Indeterminate}" Value="{Binding Progress}" Width="40" Margin="0 35 0 0" VerticalAlignment="Center"></ProgressBar>
    </Panel>
  </Border>
</Window>
